<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.dustinflanary.myappportfolio2.MainActivity">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="20dp"
        android:text="My Nanodegree Apps!"  />

    <Button
        android:id="@+id/spotify_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:onClick="sendMessage"
        android:background="#F08C35"
        android:text="Spotify Streamer"        />

    <Button
        android:id="@+id/scores_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:text="Football Scores App"/>

    <Button
        android:id="@+id/library_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:onClick="sendMessage"
        android:background="#F08C35"
        android:text="Library App"/>

    <Button
        android:id="@+id/build_it_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:onClick="sendMessage"
        android:background="#F08C35"
        android:text="Build it Bigger"/>

    <Button
        android:id="@+id/xyz_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:onClick="sendMessage"
        android:background="#F08C35"
        android:text="XYZ Reader"/>

    <Button
        android:id="@+id/capstone_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:onClick="sendMessage"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="Capstone: My App"/>
</LinearLayout>
